---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/ico-favicon-ia.png" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent-dark: #F1A674;
		--color-dark: #F4F4F4;
		--bg-dark: #2E2F49;
		--color-disable-dark: #404460;
		--bg-over-dark: #626B92;
	}
	*{
		color: var(--color-dark);
	}
</style>
